<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.takshasila.exam.RegistrationActivity"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:gravity="center">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/takshasilalogo"/>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="7dp"
                    android:background="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_email"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:tint="@color/colortint"
                    tools:ignore="VectorDrawableCompat" />
                <EditText
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_backgroung"
                    android:id="@+id/email_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter Email Id"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="7dp"
                    android:background="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_password"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:tint="@color/colortint"
                    tools:ignore="VectorDrawableCompat" />
                <EditText
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_backgroung"
                    android:id="@+id/password_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter Password"
                    android:inputType="textPassword" />
            </LinearLayout>

            <Button
                android:layout_gravity="center"
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:text="Login"
                style="@style/button_style"/>
            <TextView
                android:id="@+id/forgot_password"
                android:layout_marginTop="10dp"
                style="@style/text_footer_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password"/>
            <TextView
                android:id="@+id/register_new"
                android:layout_marginTop="10dp"
                style="@style/text_footer_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't Have Account Click Here SignUp!"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>